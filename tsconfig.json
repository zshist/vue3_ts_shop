{
  "compilerOptions": {
    "noUnusedLocals": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    // 忽略this的类型检查，Raise error on ths expressions with an implied any type.
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/plugin/element-plus.js"],
  "exclude": ["node_modules"]
}
